package com.midas.classify.util;

import java.util.ArrayList;

/**
 *
 * @author eduarc
 */
public class ARFFDataSet extends DataSet {
  
  /* Attribute types */
  public static final String NUMERIC = "NUMERIC";
  public static final String INTEGER = "INTEGER";
  public static final String REAL    = "REAL";
  public static final String STRING  = "STRING";
  public static final String DATE    = "DATE";
  public static final String NOMINAL = "NOMINAL";
  
  private String[] attributeName;
  private String[] attributeType;
  private String[] attributeFormat; // In case of Data data type
  private ArrayList<String>[] nominalValues;  // In case if Nominal class
  
  public ARFFDataSet(String name,int numAttrs) {
    super(name,numAttrs);
    
    int n = numAttrs;
    
    attributeName = new String[n];
    attributeType = new String[n];
    attributeFormat = new String[n];
    nominalValues = new ArrayList[n];
  }
  
  public void setAttributeName(int attr,String name) {
    attributeName[attr] = name;
  }
  
  public String getAttributeName(int attr) {
    return attributeName[attr];
  }
  
  public void setAttributeType(int attr,String type) {
    attributeType[attr] = type;
  }
  
  public String getAttributeType(int attr) {
    return attributeType[attr];
  }
  
  public void setNominalValues(int attr,ArrayList<String> values) {
    nominalValues[attr] = values;
  }
  
  public ArrayList<String> getNominalValues(int attr) {
    return nominalValues[attr];
  }
  
  public void setAttributeFormat(int attr,String format) {
    attributeFormat[attr] = format;
  }
  
  public String getAttributeFormat(int attr) {
    return attributeFormat[attr];
  }
}
